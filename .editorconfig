# EditorConfig para HTML, CSS y JavaScript
# Isaac ponte a hacer algo
root = true

# Configuración predeterminada para todos los archivos
[*]
charset = utf-8       # Codificación de caracteres
end_of_line = lf      # Usar saltos de línea LF (Unix-style)
indent_style = space  # Usar espacios para indentación
indent_size = 2       # Tamaño de la indentación (2 espacios)
trim_trailing_whitespace = true  # Eliminar espacios al final de las líneas
insert_final_newline = true      # Asegurar una línea en blanco al final del archivo

# Configuración específica para HTML
[*.html]
indent_size = 2       # 2 espacios, más común para HTML

# Configuración específica para CSS
[*.css]
indent_size = 2       # Consistencia con HTML y JavaScript

# Configuración específica para JavaScript
[*.js]
indent_size = 2       # 2 espacios, estándar en JavaScript moderno
